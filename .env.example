# Bio Lakehouse Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: .env is gitignored - never commit secrets!

# Anthropic Claude API key for NL-to-SQL and insights narration
ANTHROPIC_API_KEY=sk-ant-api03-YOUR_KEY_HERE

# AWS Configuration (used by insights_engine)
AWS_PROFILE=default
AWS_DEFAULT_REGION=us-east-1

# Athena Configuration
BIO_ATHENA_DATABASE=bio_gold
BIO_ATHENA_RESULTS_BUCKET=bio-lakehouse-athena-results-<YOUR_AWS_ACCOUNT_ID>

# S3 Buckets (replace <YOUR_AWS_ACCOUNT_ID> with your actual AWS account ID)
BIO_S3_BRONZE_BUCKET=bio-lakehouse-bronze-<YOUR_AWS_ACCOUNT_ID>
BIO_S3_SILVER_BUCKET=bio-lakehouse-silver-<YOUR_AWS_ACCOUNT_ID>
BIO_S3_GOLD_BUCKET=bio-lakehouse-gold-<YOUR_AWS_ACCOUNT_ID>
